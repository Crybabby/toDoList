            <% for (i = 0; i < newTexts.length; i++){ %>
               <div class="container">
                    <input type="checkbox"> 
                    <p><%= newTexts[i]  %></p> 
               </div>   
            <% } %> 
            
        </div>
        <form class ='form' method="post" action="/addText">
            <input id = 'newText' type="text" name="newText" placeholder="Add new item" autocomplete="off">  
